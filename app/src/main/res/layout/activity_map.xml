<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MapActivity">

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size" />

    <ImageView
        android:id="@+id/heart1"
        android:layout_width="@dimen/activity_game_legend"
        android:layout_height="@dimen/activity_game_legend"
        android:layout_alignBottom="@+id/level"
        android:layout_toLeftOf="@+id/heart2"
        android:src="@drawable/heart_icon" />

    <ImageView
        android:id="@+id/heart2"
        android:layout_width="@dimen/activity_game_legend"
        android:layout_height="@dimen/activity_game_legend"
        android:layout_alignBottom="@+id/level"

        android:layout_toLeftOf="@+id/heart3"
        android:src="@drawable/heart_icon" />

    <ImageView
        android:id="@+id/heart3"
        android:layout_width="@dimen/activity_game_legend"
        android:layout_height="@dimen/activity_game_legend"
        android:layout_alignBottom="@+id/level"
        android:layout_alignParentRight="true"
        android:src="@drawable/heart_icon" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/level"
        android:layout_alignParentBottom="true">

    <ImageView
        android:id="@+id/hogwarts_castle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:src="@drawable/hogwarts_castle" />


    <!-- ISKAM DA SE POKAJESH MAMKA TI -->
    <ImageView
        android:id="@+id/prison_break"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/hogwarts_castle"
        android:clickable="true"
        android:src="@drawable/prison" />

    </RelativeLayout>
    
</RelativeLayout>
