<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MapActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size" />


        <ImageView
            android:id="@+id/heart1"
            android:layout_width="@dimen/activity_game_legend"
            android:layout_height="@dimen/activity_game_legend"
            android:layout_alignBottom="@+id/level"
            android:layout_toLeftOf="@+id/heart2"
            android:src="@drawable/heart_icon" />

        <ImageView
            android:id="@+id/heart2"
            android:layout_width="@dimen/activity_game_legend"
            android:layout_height="@dimen/activity_game_legend"
            android:layout_alignBottom="@+id/level"
            android:layout_toLeftOf="@+id/heart3"
            android:src="@drawable/heart_icon" />

        <ImageView
            android:id="@+id/heart3"
            android:layout_width="@dimen/activity_game_legend"
            android:layout_height="@dimen/activity_game_legend"
            android:layout_alignBottom="@+id/level"
            android:layout_alignParentRight="true"
            android:src="@drawable/heart_icon" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/hogwarts_castle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:src="@drawable/hogwarts_castle" />

            <ImageView
                android:id="@+id/path_to_prison"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:src="@drawable/path_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView

                android:id="@+id/path_to_ship"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/path_left" />

            <ImageView
                android:id="@+id/prison_break"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/prison" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView

                android:id="@+id/ship"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/pirate_ship" />

            <ImageView
                android:id="@+id/path_to_future"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@android:color/transparent"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
