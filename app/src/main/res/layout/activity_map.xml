<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MapActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:id="@+id/heart1"
            android:layout_width="@dimen/activity_game_legend"
            android:layout_height="@dimen/activity_game_legend"
            android:layout_alignBottom="@+id/level"
            android:layout_toLeftOf="@+id/heart2"
            android:src="@drawable/heart_icon" />

        <ImageView
            android:id="@+id/heart2"
            android:layout_width="@dimen/activity_game_legend"
            android:layout_height="@dimen/activity_game_legend"
            android:layout_alignBottom="@+id/level"

            android:layout_toLeftOf="@+id/heart3"
            android:src="@drawable/heart_icon" />

        <ImageView
            android:id="@+id/heart3"
            android:layout_width="@dimen/activity_game_legend"
            android:layout_height="@dimen/activity_game_legend"
            android:layout_alignBottom="@+id/level"
            android:layout_alignParentRight="true"
            android:src="@drawable/heart_icon" />

    </LinearLayout>


    <android.support.v7.widget.GridLayout
        app:columnCount="3"
        app:rowCount="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".main.goals.NewGoalActivity"
        app:orientation="horizontal"
        app:columnOrderPreserved="false"
        app:alignmentMode="alignMargins"
        app:useDefaultMargins="false">

        <ImageView
            android:id="@+id/hogwarts_castle"
            app:layout_column="0"

            app:layout_row="0"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:src="@drawable/hogwarts_castle" />


        <!-- ISKAM DA SE POKAJESH MAMKA TI -->
        <ImageView
            android:id="@+id/prison_break"
            app:layout_column="2"
            app:layout_row="1"
            android:clickable="true"
            android:src="@drawable/prison" />

    </android.support.v7.widget.GridLayout>
    
</LinearLayout>
