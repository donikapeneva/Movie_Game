<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/reg_q_background"
    tools:context=".RegularQuestionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="right">

        <ImageView
            android:id="@+id/heart1_reg_question"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/heart_icon" />

        <ImageView
            android:id="@+id/heart2_reg_question"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/heart_icon" />

        <ImageView
            android:id="@+id/heart3_reg_question"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/heart_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/regular_question_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorQuestion"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/regular_question_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_weight="4"
        android:orientation="vertical">

        <Button
            android:id="@+id/answer1_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@color/regularQButton"/>

        <Button
            android:id="@+id/answer2_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@color/regularQButton"/>

        <Button
            android:id="@+id/answer3_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@color/regularQButton" />

        <Button
            android:id="@+id/answer4_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@color/regularQButton" />


    </LinearLayout>


</LinearLayout>
